{
  "name": "quatt-stae-assignment",
  "version": "1.0.0",
  "description": "Assignment for the Senior Test Automation Engineer role at Quatt",
  "scripts": {
    "test": "npx playwright test",
    "test:tag": "npx playwright test --grep",
    "test:headless": "PLAYWRIGHT_HEADLESS=1 npx playwright test",
    "test:chrome": "npx playwright test --project='Google Chrome'",
    "test:firefox": "npx playwright test --project=firefox",
    "test:safari": "npx playwright test --project=webkit",
    "test:mobile": "npx playwright test --project='Mobile Chrome'",
    "test:chromium": "npx playwright test --project=chromium",
    "test:api": "npx playwright test tests/API/",
    "test:ui": "npx playwright test tests/UI/",
    "lint": "eslint . --ext .ts,.tsx",
    "debug": "playwright test --debug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RicardoToledo/quatt-stae-assignment.git"
  },
  "author": "Ricardo Toledo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RicardoToledo/quatt-stae-assignment/issues"
  },
  "homepage": "https://github.com/RicardoToledo/quatt-stae-assignment#readme",
  "devDependencies": {
    "@playwright/test": "^1.51.0",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-plugin-playwright": "^2.2.0",
    "supertest": "^7.0.0",
    "typescript": "^5.8.2"
  }
}